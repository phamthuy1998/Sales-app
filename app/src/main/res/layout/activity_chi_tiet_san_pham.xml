<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPham">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbarchitietsanpham"
    android:background="@color/colorPrimary"
    app:titleTextColor="#fff"
    app:title="Chi tiết sản phẩm"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/imageviewchitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textviewtenchitietsanpham"
                android:text="Chi tiet san phan"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewgiachitietsanpham"
                android:text="Gia san pham"
                android:textColor="#FF0000"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/textviewsoluongsanpham"
                android:text="sản phẩm sẵn có"
                android:textColor="#5A5353"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng "
                    android:textSize="15dp" />
                <Button
                    android:focusable="false"
                    android:text="-"
                    android:id="@+id/buttonminusSP"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@null"
                    android:focusable="false"
                    android:text="1"
                    android:id="@+id/buttonvaluesSP"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:focusable="false"
                    android:text="+"
                    android:id="@+id/buttonplusSP"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button

                    android:outlineSpotShadowColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#FCB3B3"
                    android:id="@+id/buttonGioHang"
                    android:textAllCaps="false"
                    android:textColor="#FF0E0E"
                    android:textSize="13sp"
                    android:text="Thêm giỏ hàng"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/buttondatmua"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#F83808"
                    android:text="Đặt mua"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#474D4A"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:id="@+id/textviewmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>